# CivisLaw Platform Development Environment Variables

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=CivisLaw

# Authentication
JWT_SECRET=civislaw-dev-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Database (SQLite for development)
DATABASE_URL="file:./dev.db"

# Encryption
ENCRYPTION_KEY=civislaw-32-character-encrypt-key
ENCRYPTION_IV=civislaw-16-char-iv

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
